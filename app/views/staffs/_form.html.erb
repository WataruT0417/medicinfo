<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for (@staff) do |f| %>
      <%= render 'shared/error_messages_staff' %>
      <%= f.label "職員名", class: 'col-xs-2 control-label' %>
      <%= f.text_field :name, class: 'col-xs-10 form-control', id: 'name' %>

      <%= f.submit yield(:button_text), class: "btn btn-primary col-xs-offset-5 col-xs-2" %>
    <% end %>
  </div>
</div>