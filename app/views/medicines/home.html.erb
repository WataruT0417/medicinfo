<% provide(:title, "医薬品情報") %>
<h1>医薬品情報</h1>
<div class="row">
  <div class="col-md-5 col-md-offset-3">
    <%= form_for(@medicine) do |f| %>
      <%= f.label "医薬品名", class: 'text-right col-xs-4 control-label' %>
      <%= f.text_field :name, class: 'col-xs-8' %>

      <%= f.label "タイトル", class: 'text-right col-xs-4 control-label' %>
      <%= f.text_field :title, class: 'col-xs-8'  %>

      <%= f.label "コード", class: 'text-right col-xs-4 control-label' %>
      <%= f.text_field :code, class: 'col-xs-8'  %>

      <%= f.label "報告日", class: 'text-right col-xs-4 control-label' %>
      <%= f.date_field :reported_at, class: 'col-xs-8'  %>
      
      <%= f.submit "新規", class: "btn btn-primary col-xs-offset-4 col-xs-2" %>
      <%= f.submit "検索", class: "btn btn-primary col-xs-offset-2 col-xs-2" %>
    <% end %>
  </div>
</div>
<div class="container" >
 <table class="table table-condensed">
    <thead>
        <tr>
            <th>ID</th>
            <th>報告日</th>
            <th>医薬品名</th>
            <th>タイトル</th>
            <th>コード</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>1</th>
            <td>Hanako</td>
            <td>Qiita</td>
            <td>@Hanaq</td>
        </tr>
        <tr>
            <th>2</th>
            <td>Taro</td>
            <td>Qiita</td>
            <td>@TaroQ</td>
        </tr>
    </tbody>
  </table>
</div>