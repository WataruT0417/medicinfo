<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for (@medicine) do |f| %>

      <%= render 'shared/error_messages' %>
      <%= f.label "医薬品名", class: 'col-xs-2 control-label' %>
      <%= f.text_field :name, class: 'col-xs-10 form-control', id: 'name' %>

      <%= f.label "タイトル", class: 'col-xs-2 control-label' %>
      <%= f.text_field :title, class: 'col-xs-10 form-control', id: 'title'  %>

      <%= f.label "報告日", class: 'col-xs-2 control-label' %>
      <%= f.date_field :reported_at, class: 'col-xs-10 form-control', id: 'reported_at'  %>

      <%= f.label "質問者", class: 'col-xs-2 control-label' %>
      <%= f.text_field :request_staff, class: 'col-xs-10 form-control', id: 'request_staff' %>

      <%= f.label "詳細", class: 'col-xs-2 control-label' %>
      <%= f.text_area :detail, class: 'col-xs-10 form-control', id: 'detail', size: "60x10"  %>

      <%= f.label "情報元", class: 'col-xs-2 control-label' %>
      <%= f.text_field :source, class: 'col-xs-10 form-control', id: 'source' %>

      <%= f.label "報告者", class: 'col-xs-2 control-label' %>
      <%= f.select :report_staff, Staff.all.map{|s| [s.name]}, {include_blank: true}, class: 'col-xs-10 form-control', id: 'report_staff' %>

      <div class="form-group">
        <div class="form-inline">
          <%= f.label "承認", class: 'col-xs-2 control-label' %>
          <%= f.check_box :approval_flg, class: 'col-xs-1 form-control', id: 'approval_flg' %>
        </div>
      </div>
      <%= f.submit yield(:button_text), class: "btn btn-primary col-xs-offset-3 col-xs-2" %>
    <% end %>
  </div>
</div>