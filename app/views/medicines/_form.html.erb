<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for (@medicine) do |f| %>

      <%= render 'shared/error_messages' %>
      <%= f.label "医薬品名", class: 'col-xs-2 control-label' %>
      <%= f.text_field :name, class: 'col-xs-10 form-control', id: 'name' %>

      <%= f.label "タイトル", class: 'col-xs-2 control-label' %>
      <%= f.text_area :title, class: 'col-xs-10 form-control', id: 'title'  %>

      <%= f.label "コード", class: 'col-xs-2 control-label' %>
      <%= f.text_field :code, class: 'col-xs-10 form-control', id: 'code'  %>

      <%= f.label "報告日", class: 'col-xs-2 control-label' %>
      <%= f.date_field :reported_at, class: 'col-xs-10 form-control', id: 'reported_at'  %>

      <%= f.label "承認者", class: 'col-xs-2 control-label' %>
      <%= f.text_field :approval, class: 'col-xs-10 form-control', id: 'approval' %>

      <%= f.submit yield(:button_text), class: "btn btn-primary col-xs-offset-5 col-xs-2" %>
    <% end %>
  </div>
</div>